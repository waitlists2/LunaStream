{
  "name": "lunastream-main",
  "author": "LunaStream",
  "private": true,
  "version": "3.2.0",
  "type": "module",
  "homepage": ".",
  "main": "app.cjs",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "start": "npm run build && npm run server",
    "start:electron": "npm run build && npm run electron",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "electron": "electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.1",
    "@capacitor/core": "^7.4.1",
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^6.7.1",
    "@fastify/rate-limit": "^7.6.0",
    "@fastify/static": "^6.12.0",
    "dotenv": "^17.2.0",
    "fastify": "^4.29.1",
    "fuse": "^0.12.1",
    "fuse.js": "^7.1.0",
    "i18next": "^25.3.2",
    "ioredis": "^5.6.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.19"
  },
  "build": {
    "appId": "watch.lunastream.app",
    "productName": "LunaStream",
    "files": [
      "dist/**/*",
      "app.cjs",
      "favicon.ico"
    ],
    "directories": {
      "output": "electron-dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "favicon-large.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
